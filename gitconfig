# Inspired by:
# https://github.com/sapegin/dotfiles


[color]
	ui = auto
[color "diff"]
	meta = blue
	frag = white
	old = red bold
	new = green bold
[core]
	editor = vim
	autocrlf = false
	safecrlf = false
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | [%an] %s%d\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
[push]
	default = current
[credential]
	helper = cache

# Include local settings
# Requires Git 1.7.10
# git config -f ~/.gitlocal user.email "artem@sapegin.ru"
# git config -f ~/.gitlocal user.name "Artem Sapegin"
[include]
	path = .gitlocal
